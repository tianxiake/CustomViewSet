<?xml version="1.0" encoding="utf-8"?>
<com.snail.customviewset.view.LoadingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_load"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.snail.customviewset.view.ShapeView
        android:id="@+id/sv_shape"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="50dp" />

    <ImageView
        android:id="@+id/iv_shadow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/shadow" />

</com.snail.customviewset.view.LoadingView>